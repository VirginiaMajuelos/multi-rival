---
import Navigation from "./Navigation.astro";
---

<header id="header" class="header">
  <Navigation />
  <div class="overly">
    <h1>MultiRivel</h1>
    <p>REFORMAS, CONSTRUCCIONES Y M√ÅS...</p>
  </div>
</header>

<style>
  .header {
    width: 100%;
    height: 100vh;
    display: table;
    padding: 0;
    background: url(/assets/portfolio/intro-bg.avif) no-repeat center center;
    background-color: #e5e5e5;
    background-size: cover;
    text-align: center;
  }

  .header .overly {
    background: rgba(0, 0, 0, 0.4);
    height: 100vh;
  }

  .overly {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 {
    font-family: "Dancing Script";
    color: #fff;
    font-size: 10em;
    font-weight: 700;
    margin-top: 0;
  }

  p {
    color: #fff;
    font-size: 32px;
    font-weight: 300;
    margin-top: 10px;
    margin-bottom: 40px;
  }

  /* Responsive CSS for Mobile */
  @media (max-width: 767px) {
    h1 {
      font-size: 5em;
    }

    p {
      font-size: 20px;
      margin-bottom: 20px;
      margin: 10px;
    }
  }
</style>
